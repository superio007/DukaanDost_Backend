# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/fabric-erp?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# ImageKit Configuration
IMAGEKIT_PUBLIC_KEY=your-imagekit-public-key
IMAGEKIT_PRIVATE_KEY=your-imagekit-private-key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your-imagekit-id

# CORS Configuration
# IMPORTANT: In production, set this to your frontend application URL (e.g., https://yourdomain.com)
# Do NOT use wildcard '*' in production for security reasons
CORS_ORIGIN=http://localhost:5173

# Security
BCRYPT_SALT_ROUNDS=10
