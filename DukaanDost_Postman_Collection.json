              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"buyerName\": \"ABC Garments Ltd\",\n  \"contactPerson\": \"Jane Smith\",\n  \"requiredByDate\": \"2026-03-20\",\n  \"priority\": \"MEDIUM\"\n}"
            },
            "url": {
