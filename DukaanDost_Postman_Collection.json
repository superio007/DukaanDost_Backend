  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "inventoryId",
      "value": "",
      "type": "string"
    },
    {
      "key": "requestId",
      "value": "",
      "type": "string"
    },
    {
      "key": "itemId",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.token) {",
                  "        pm.collectionVariables.set('token', response.data.token);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Admin User\",\n  \"email\": \"admin@dukaandost.com\",\n  \"password\": \"admin123\",\n  \"role\": \"ADMIN\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            },
            "description": "Register a new user. Roles: ADMIN, SAMPLING_HEAD, SALES"
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.token) {",
                  "        pm.collectionVariables.set('token', response.data.token);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@dukaandost.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Login and receive JWT token"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Inventory",
      "item": [
        {
          "name": "Create Inventory",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data._id) {",
                  "        pm.collectionVariables.set('inventoryId', response.data._id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fabricName\": \"Cotton Blend\",\n  \"color\": \"Navy Blue\",\n  \"gsm\": 180,\n  \"availableMeters\": 500\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/inventory",
              "host": ["{{baseUrl}}"],
              "path": ["api", "inventory"]
            },
            "description": "Create new inventory record (ADMIN only)"
          },
          "response": []
        },
        {
          "name": "Get All Inventory (Paginated)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/inventory?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "inventory"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number (default: 1)"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Items per page (default: 10, max: 100)"
                },
                {
                  "key": "fabricName",
                  "value": "Cotton",
                  "description": "Filter by fabric name (partial match)",
                  "disabled": true
                },
                {
                  "key": "color",
                  "value": "Blue",
                  "description": "Filter by color (partial match)",
                  "disabled": true
                },
                {
                  "key": "gsm",
                  "value": "180",
                  "description": "Filter by exact GSM value",
                  "disabled": true
                }
              ]
            },
            "description": "Get all inventory records with pagination and filters (All authenticated users)"
          },
          "response": []
        },
        {
          "name": "Get Inventory by ID",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/inventory/{{inventoryId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "inventory", "{{inventoryId}}"]
            },
            "description": "Get a single inventory record by ID (All authenticated users)"
          },
          "response": []
        },
        {
          "name": "Update Inventory",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"availableMeters\": 450\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/inventory/{{inventoryId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "inventory", "{{inventoryId}}"]
            },
            "description": "Update inventory record (ADMIN only)"
          },
          "response": []
        },
        {
          "name": "Delete Inventory (Soft Delete)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/inventory/{{inventoryId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "inventory", "{{inventoryId}}"]
            },
            "description": "Soft delete inventory record (ADMIN only). Record is marked as deleted but not removed from database."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Sample Requests",
      "item": [
        {
          "name": "Create Sample Request",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data._id) {",
                  "        pm.collectionVariables.set('requestId', response.data._id);",
                  "        if (response.data.items && response.data.items.length > 0) {",
                  "            pm.collectionVariables.set('itemId', response.data.items[0]._id);",
                  "        }",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"buyerName\": \"ABC Garments Ltd\",\n  \"contactPerson\": \"John Doe\",\n  \"requiredByDate\": \"2026-03-15\",\n  \"priority\": \"HIGH\",\n  \"items\": [\n    {\n      \"fabricName\": \"Cotton Blend\",\n      \"color\": \"Navy Blue\",\n      \"gsm\": 180,\n      \"requiredMeters\": 10,\n      \"availableMeters\": 500\n    },\n    {\n      \"fabricName\": \"Polyester\",\n      \"color\": \"Black\",\n      \"gsm\": 150,\n      \"requiredMeters\": 5,\n      \"availableMeters\": 300\n    }\n  ],\n  \"attachments\": [\n    \"https://example.com/design1.jpg\",\n    \"https://example.com/design2.jpg\"\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/sample-requests",
              "host": ["{{baseUrl}}"],
              "path": ["api", "sample-requests"]
            },
            "description": "Create new sample request (SALES, ADMIN). Priority: LOW, MEDIUM, HIGH"
          },
          "response": []
        },
        {
          "name": "Get All Sample Requests (Paginated)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
