                {
                  "key": "status",
                  "value": "REQUESTED",
                  "description": "Filter by status (REQUESTED, IN_SAMPLING, SENT, APPROVED, REJECTED)",
                  "disabled": true
                },
                {
                  "key": "buyerName",
                  "value": "ABC",
                  "description": "Filter by buyer name (partial match)",
                  "disabled": true
                }
              ]
            },
            "description": "Get all sample requests with pagination and filters (All authenticated users)"
          },
          "response": []
